import turtle
def draw_petal(t, radius, angle):
    for i in range(2):
        t.circle(radius, angle)
        t.left(180 - angle)
def draw_flower(num_petals, radius=150, angle=60):
    wn = turtle.Screen()
    wn.bgcolor("black")
    t = turtle.Turtle()
    t.color("Red")
    t.speed(0)
    for i in range(num_petals):
        draw_petal(t, radius, angle)
        t.left(360 / num_petals)
    t.hideturtle()
    wn.mainloop()
num_petals = int(input("Enter the number of petals for the flower: "))
draw_flower(num_petals)
